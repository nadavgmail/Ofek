@using Ofek;
@using Ofek.Models
@model List<CustomersAndProducts>
@{
    Layout = null;
}

@if (Model.Count == 0)
{
    <div style="text-align:center">no data</div>
    return;
}
<table>
    <tr>
        <th>שם חברה</th>
        <th>שם מוצר</th>
        <th>סוג</th>
        <th>תאריך התחלה</th>
        <th>סבום</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FinanceInstitue</td>
            <td>@item.ProductType</td>
            <td>@item.InvestType</td>
            <td>@Helpers.GetDateString(item.ProdCreatedDate)</td>
            <td>@item.sum</td>
        </tr>
    }
    
</table>
<div>total amount:@Model.Sum(s=>s.sum)</div>

