@using Ofek;
@using Ofek.Models
@model List<CustomersAndProducts>
@{
    Layout = null;
}

@if(Model.Count == 0)
   {
        <div style="text-align:center">no data</div>
    return;
    }
<table>
    <tr>
        <th>שם</th>
        <th>כתובת</th>
        <th>תאריך לידה</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FullName</td>
            <td>@item.Address</td>
            <td>@Helpers.GetDateString(item.BirthDate)</td>
        </tr>
    }
</table>


